{% extends "./base.html.twig" %}

{% block body %}
    <div class="w-4/5 m-auto text-center">
        <div class="py-12 border-b border-gray-200">
            <h1 class="text-6xl pt-12 pb-8">
                blogs Review ({{ movies|length }})
            </h1>

            <span class="font-light text-gray-500 italic">
                Created by Code With jonah
            </span>
        </div>
    </div>

    {% if app.user %}
        <div class="mx-auto w-4/5 my-8">
            <a 
                href="/movies/create" 
                class="uppercase border border-gray-500 text-lg py-4 px-6 rounded transition transition-all bg-gray-800 text-white hover:bg-white hover:text-gray-800">
                Create New post
            </a>
        </div>
    {% endif %}
    
    <div class="md:grid lg:grid-cols-3 gap-20 w-4/5 mx-auto py-15 ">
        <!-- Review Item -->
        {% for movie in movies %}
            <div class="text-center pt-8 pb-4">
                <img
                    src="{{ movie.imagePath }}"
                    alt=""
                    class="shadow-xl rounded-md"
                />

                <h2 class="text-gray-700 font-bold text-3xl py-2">
                    {{ movie.title }}
                </h2>

                <span class="text-gray-500">
                    By <span class="italic text-sm text-gray-800">Code With jonathan| 3.04.2024
                </span>

                <div class="description">
                    <p class="text-base text-gray-700 pt-4 pb-10 leading-8 font-light">
                        {{ movie.description|slice(0,100 )|join(' ') }}
                        <span class="more" style="display: none;">{{ movie.description|slice(0,2000)|join(' ') }}</span>
                    </p>
                   
                </div>

                <a href="/movies/{{ movie.id }}" class="uppercase border border-gray-500 text-gray-600 text-lg py-4 px-12 rounded transition transition-all hover:bg-green-800 hover:text-white">
                    Keep Reading
                </a>
            </div>
        {% endfor %}
    </div>

    <script>
        function toggleDescription(button) {
            var description = button.previousElementSibling.querySelector('.more');
            if (description.style.display === 'none') {
                description.style.display = 'inline';
                button.innerText = 'Read Less';
            } else {
                description.style.display = 'none';
                button.innerText = 'Read More';
            }
        }
    </script>
{% endblock %}
